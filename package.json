{
  "name": "nextxray",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "npm run dev -w web",
    "dev:demo": "npm run dev -w demo",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:nextxray": "turbo run test --filter=@nextxray/*",
    "test:coverage": "turbo run test:coverage --filter=@nextxray/*",
    "test:ui": "vitest --ui --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ts:check": "turbo run ts:check"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "4.0.16",
    "@vitest/ui": "4.0.16",
    "prettier": "3.7.4",
    "turbo": "2.7.3",
    "typescript": "5.9.2",
    "vitest": "4.0.16"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
